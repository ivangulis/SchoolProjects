package executive;

import java.util.ArrayList;
import java.util.logging.Level;
import java.util.logging.Logger;

import javax.ejb.Stateless;
import javax.persistence.EntityExistsException;
import javax.persistence.EntityManager;
import javax.persistence.NoResultException;
import javax.persistence.PersistenceContext;
import javax.persistence.PersistenceException;

import dao.UserDAO;
import model.Champion;
import model.User;

/**
 * Session Bean implementation class UserExecutiveBean
 * This bean is used to register new user, login (get registered user) and create new user.
 * @author Ivan Gulis
 */
@Stateless
public class UserExecutiveBean {

	@PersistenceContext
    private EntityManager entityManager;
	private UserDAO userDAO = new UserDAO();
	
	private static Logger LOG = Logger.getLogger(UserExecutiveBean.class.getName());
	
	/** Vráti objekt usera */
	public User getUser(String username) {
		User user = null;
		try {
			user = userDAO.getUser(entityManager, username);
			for (Champion c : user.getPool())
				entityManager.detach(c);
			entityManager.detach(user);
			user.setPool(new ArrayList<Champion>(user.getPool()));
			LOG.info("User was successfully found in database.");
		} catch (NoResultException e) {
			LOG.log(Level.SEVERE, "Error: User " + username + " does not exist"
					+ " - Failed to get user entity from database.", e);
		} catch (PersistenceException e) {
			LOG.log(Level.SEVERE, "Error: Query execution exceeded the query timeout value set and the"
					+ " transaction was rolled back - Failed to get user entity from database.", e);
		}
		return user; //null user will be recognized in client
	}

	/** Vytvorí a vloží objekt usera do databázy */
	public boolean createAccount(String username, String password, String salt, String server, String nick) {
		User user = new User();
		user.setUsername(username);
		user.setPassword(password);
		user.setSalt(salt);
		user.setServer(server);
		user.setNick(nick);
		try {
			userDAO.createAccount(entityManager, user);
		} catch (EntityExistsException e) {
			LOG.log(Level.SEVERE, "Error: User " + username + " already exists - Failed to create user in database.", e);
			return false; //to get information about success for client for GUI error message
		} catch (IllegalArgumentException e) {
			LOG.log(Level.SEVERE, "Error: User " + username + " is not an entity in database - Failed to create user in database.", e);
			return false; //to get information about success for client for GUI error message
		}
		LOG.info("User was successfully created in database.");
		return true;
	}

	/** Aktualizuje usera v databáze */
	public boolean saveUser(User user) {
		try {
			userDAO.saveAccount(entityManager, user);
		} catch (IllegalArgumentException  e) {
			LOG.log(Level.SEVERE, "Error: User " + user.getUsername() + " is not an entity or was deleted from database - Failed to actualize user in database.", e);
			return false; //to get information about success for client for GUI error message
		}
		LOG.info("User changes were successfully saved into database.");
		return true;
	}

}
